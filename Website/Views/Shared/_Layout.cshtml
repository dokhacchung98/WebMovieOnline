    <!-- //for-mobile-apps -->
    <link href="~/Content/stylewebsite/bootstrap.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Content/stylewebsite/style.css" rel="stylesheet" type="text/css" media="all" />
    <link rel="stylesheet" href="~/Content/stylewebsite/contactstyle.css" type="text/css" media="all" />
