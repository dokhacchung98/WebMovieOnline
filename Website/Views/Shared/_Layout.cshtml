                                                <li><a href="genres.html">Phim hoạt hình</a></li>
                                            </ul>
                                        </div>
                                        <div class="clearfix"></div>
                                    </li>
                                </ul>
                            </li>
                            <li><a href="series.html">Phim Bộ</a></li>
                            <li><a href="news.html">Phim Lẻ</a></li>
                            <li><a href="short-codes.html">Tin Tức</a></li>
                            <li><a href="list.html">Trailer</a></li>
                        </ul>
                    </nav>
                </div>
            </nav>
        </div>
    </div>
    <!-- //nav -->
    <!-- banner -->
    @Html.Action("SlideBarTopView", "Base")
    <script src="~/Scripts/ScriptWebsite/jquery.slidey.js"></script>
    <script src="~/Scripts/ScriptWebsite/jquery.dotdotdot.min.js"></script>
    <script type="text/javascript">
        $("#slidey").slidey({
            interval: 8000,
            listCount: 5,
            autoplay: false,
            showList: true
        });
        $(".slidey-list-description").dotdotdot();
    </script>
    <!-- //banner -->
    <!--- contact-->
    <div class="general_social_icons">
        <nav class="social">
            <ul>
                <li class="w3_twitter"><a href="#">Twitter <i class="fab fa-twitter"></i></a></li>
                <li class="w3_facebook"><a href="#">Facebook <i class="fab fa-facebook-f"></i></a></li>
                <li class="w3_g_plus"><a href="#">Google+ <i class="fab fa-google-plus-g"></i></a></li>
            </ul>
        </nav>
