@model IEnumerable<Website.ViewModel.ActorViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Admin/table-css")


<div class="row">
    <div class="container">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-6">
                        <h2>Quản lý <b>Diễn viên</b></h2>
                    </div>
                    <div class="col-sm-6">
                        <a href="#addActorModal" class="btn btn-success" data-toggle="modal"><i class="fa fa-plus"></i><span>Thêm mới diễn viên</span></a>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Họ tên</th>
                        <th>Hình ảnh</th>
                        <th>Ngày tạo</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.NameActor</td>
                            <td>
                                <img src="@item.Thumbnail" style="width:50px; height:50px" />
                            </td>
                            <td>@item.CreatedDate</td>
                            <td>
                                <a class="edit" href="@Url.Action("Edit","ManagerActors",new { id = item.Id })">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a class="delete" data-targeturl="@Url.Action("Delete","ManagerActors",new { id = item.Id })">
                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="clearfix">
                @if (Model.Count() > 0)
                {
                    <div class="hint-text">Hiện thị <b>2</b> out of <b>@Model.Count()</b> entries</div>
                }
                else
                {
                    <div class="hint-text">Không có dữ liệu</div>
                }
                <ul class="pagination">
                    <li class="page-item disabled"><a href="#">Previous</a></li>
                    <li class="page-item"><a href="#" class="page-link">1</a></li>
                    <li class="page-item"><a href="#" class="page-link">2</a></li>
                    <li class="page-item active"><a href="#" class="page-link">3</a></li>
                    <li class="page-item"><a href="#" class="page-link">4</a></li>
                    <li class="page-item"><a href="#" class="page-link">5</a></li>
                    <li class="page-item"><a href="#" class="page-link">Next</a></li>
                </ul>
            </div>
        </div>
    </div>
    <!-- Edit Modal HTML -->
    <div id="addActorModal" class="modal fade">
        @Html.Action("Create", "ManagerActors")
    </div>

    <div id="deleteActorModal" class="modal fade"></div>
</div>

@Scripts.Render("~/Script/jquery")
<script>
    $(document).ready(function () {
        $('body').on('click', '.delete', function (e) {
            e.preventDefault();
            $("#deleteActorModal").remove();
            $.get($(this).data("targeturl"), function (data) {
                $('<div id="deleteActorModal" class="modal fade">' +
                    data + '</div>').modal();
            });
        });
    });
</script>