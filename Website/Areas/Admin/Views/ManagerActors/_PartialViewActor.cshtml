@model PagedList.IPagedList<Website.ViewModel.ActorViewModel>

@using PagedList.Mvc

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Họ tên</th>
            <th>Hình ảnh</th>
            <th>Ngày tạo</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.NameActor</td>
                <td>
                    <img src="@item.Thumbnail" style="width:50px; height:50px" />
                </td>
                <td>@item.CreatedDate</td>
                <td>
                    <a class="edit" href="@Url.Action("Edit","ManagerActors",new { id = item.Id })">
                        <i class="fa fa-edit"></i>
                    </a>
                    <a class="delete" data-targeturl="@Url.Action("Delete","ManagerActors",new { id = item.Id })">
                        <i class="fa fa-trash" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />

<div class="clearfix">
    @if (Model.Count() > 0)
    {
        <div class="hint-text">Trang <b>@(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)</b> / <b>@Model.PageCount</b></div>
    }
    else
    {
        <div class="hint-text">Không có dữ liệu</div>
    }
    @Html.PagedListPager(Model, page => Url.Action("GetPaging", "ManagerActors", new { page }),
    PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions() {
        HttpMethod = "GET", UpdateTargetId = "customer_area"}))
</div>