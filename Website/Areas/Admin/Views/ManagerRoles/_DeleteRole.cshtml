@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole
@{
    ViewBag.Title = "_DeleteRole";
}
<div class="modal-dialog">
    <div class="modal-content">
        @using (Html.BeginForm("DeleteRole", "ManagerRoles", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.Name)
            <div class="modal-header">
                <h4 class="modal-title">Xóa quyền người dùng</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body">
                <p class="text-warning">Bạn có muốn xóa @Model.Name không?</p>
            </div>
            <div class="modal-footer">
                <input type="button" class="btn btn-default" data-dismiss="modal" value="Hủy">
                <input type="submit" class="btn btn-danger" value="Xóa quyền người dùng">
            </div>
        }
    </div>
</div>
