@model Website.ViewModel.TagViewModel

@{
    ViewBag.Title = "Create";
    Layout = null;
}


<script src="~/Scripts/ckeditor/ckeditor.js"></script>
<script src="~/Scripts/ckfinder/ckfinder.js"></script>

<div class="modal-dialog">
    <div class="modal-content">
        @using (Html.BeginForm("Create", "ManagerTag", FormMethod.Post, new { enctype = "multipart/form-data", @name = "formupload" }))
        {
            <div class="modal-header">
                <h4 class="modal-title">Thêm mới <b>thẻ</b></h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body">

                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.NameTag)
                    @Html.EditorFor(model => model.NameTag, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Description)
                    <textarea name="Description" id="ckeditor"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                <input type="submit" class="btn btn-success" value="Thêm mới thẻ">
            </div>
        }
    </div>
</div>
@Scripts.Render("~/Script/jquery")
<script>
    CKEDITOR.replace('ckeditor');
</script>